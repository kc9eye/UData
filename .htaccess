#Prevents directory listings
Options -Indexes

ErrorDocument 404 http://10.59.27.185:8080/wwwroot/templates/error/404
ErrorDocument 403 http://10.59.27.185:8080/wwwroot/templates/error/403

RewriteEngine on

# Rewrite /foo/bar to /foo/bar.php
RewriteRule ^([^.?]+)$ %{REQUEST_URI}.php [L]

# Return 404 if original request is /foo/bar.php
RewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$"
RewriteRule .* - [L,R=404]